# ===========================================
# A-Patricia Agent - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SLACK CONFIGURATION (REQUIRED)
# ===========================================
# Get these from https://api.slack.com/apps

# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token-here

# Signing Secret (from Basic Information page)
SLACK_SIGNING_SECRET=your-signing-secret-here

# Use Socket Mode (recommended for bots)
SLACK_SOCKET_MODE=true

# ===========================================
# GOOGLE/GEMINI CONFIGURATION (REQUIRED)
# ===========================================
# Use Gemini API Key
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Gemini model to use (Vision)
GEMINI_MODEL=gemini-2.5-flash

# ===========================================
# QDRANT CONFIGURATION (Vector Database)
# ===========================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=products

# ===========================================
# MINIO CONFIGURATION (File Storage)
# ===========================================
MINIO_ROOT_USER=patricia-admin
MINIO_ROOT_PASSWORD=patricia-secret-key-2024

# ===========================================
# WEB ADMIN CONFIGURATION
# ===========================================
# JWT for authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Data encryption key (32 bytes)
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Price tolerance for matching (percentage)
# 5.0 means prices within 5% are considered matching
PRICE_TOLERANCE_PERCENT=5.0

# Maximum products to process per image
MAX_PRODUCTS_PER_IMAGE=100

# Semantic search settings
SEARCH_LIMIT=5
SIMILARITY_THRESHOLD=0.7

# ===========================================
# OPTIONAL: USER RESTRICTIONS
# ===========================================
# Comma-separated list of Slack User IDs allowed to use the bot
# Leave empty to allow all users
# Example: ALLOWED_USER_IDS=U09V86UTZNX,U0972R3NWA3,U09738VER1D
ALLOWED_USER_IDS=
